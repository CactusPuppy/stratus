<%= form_with url: sessions_path do |form| %>
  <div>
    <%= form.label :username, "Username" %>
    <div><%= form.text_field :username, placeholder: "username", :class => "rounded", required: true %></div>
  </div>

  <div class="my-2">
    <%= form.label :password, "Password" %>
    <div><%= form.text_field :password, placeholder: "password", type: :password, :class => "rounded", required: true %></div>
  </div>

  <% if flash[:alert] %>
    <div style="color: red;"><%= flash[:alert] %></style>
  <% end %>

  <%= submit_tag "Submit", data: { disable_with: "Submitting..." }, :class => "mt-4 p-2 bg-gray-300 border-gray-400 border-2 hover:bg-gray-400 hover:cursor-pointer rounded" %>
<% end %>
