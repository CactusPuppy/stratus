<%= form_with url: sessions_path do |form| %>
  <div>
    <%= form.label :username, "Username" %>
    <%= form.text_field :username, placeholder: "username" %>
  </div>

  <div>
    <%= form.label :password, "Password" %>
    <%= form.text_field :password, placeholder: "password", type: :password %>
  </div>

  <% if flash[:alert] %>
    <div style="color: red;"><%= flash[:alert] %></style>
  <% end %>

  <%= submit_tag "Submit", data: { disable_with: "Submitting..." } %>
<% end %>
